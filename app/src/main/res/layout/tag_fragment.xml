<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="match_parent"
        tools:context=".ui.tag.TagFragment">

    <TextView
            android:id="@+id/tagNameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:textSize="@dimen/text_header_size"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Outdoors"/>

    <TextView
            android:id="@+id/followersValueTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_header_size"
            android:layout_margin="@dimen/activity_vertical_margin"
            app:layout_constraintTop_toBottomOf="@+id/tagNameTv"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="2000"/>

    <View
            android:id="@+id/followersIndicator"
            android:layout_width="2dp"
            android:layout_height="2dp"
            android:layout_marginStart="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/small_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:background="@color/colorAccent"
            app:layout_constraintTop_toBottomOf="@+id/followersValueTv"
            app:layout_constraintStart_toStartOf="parent"/>

    <TextView
            android:id="@+id/followersLabelTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_header_size"
            android:layout_margin="@dimen/activity_vertical_margin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tagNameTv"
            tools:text="followers"/>

    <TextView
            android:id="@+id/itemsValueTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_header_size"
            android:layout_margin="@dimen/activity_vertical_margin"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="10000" app:layout_constraintTop_toBottomOf="@+id/followersIndicator"/>

    <TextView
            android:id="@+id/itemsLabelTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_header_size"
            android:layout_margin="@dimen/activity_vertical_margin"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="total items" app:layout_constraintTop_toBottomOf="@+id/followersIndicator"/>

    <Button
            android:id="@+id/nextBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="next"
    />

</androidx.constraintlayout.widget.ConstraintLayout>